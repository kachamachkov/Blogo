<div class="author">
    <h1 class="author__heading">
        Search Results
    </h1>
</div>

<% if (typeof data !== 'undefined') { %>
    <section class="articles">

        <ul class="article-ul">
            <% data.forEach(post=> { %>
                <li>
                    <a href="/posts/<%= post._id %>">
                        <span>
                            <%= post.title %>
                        </span>
                        <span class="article-list__date">
                            <%= post.createdAt.toDateString() %>
                        </span>
                    </a>
                </li>
            <% }) %>
        </ul>

    </section>
    <% } else { %>
        <h3 class="error-msg">
            <%= error.message %>
        </h3>
    <% } %>