<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2>

    
    <button type="button" class="btn" id="openDeleteModal">Delete</button>

        <div id="deleteModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Are you sure you want to delete this post?</h2>
                <form id="deleteForm" action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
                    <button type="button" class="btn confirmDelete">Yes, Delete</button>
                    <button type="button" class="btn cancelDelete">Cancel</button>
                </form>
            </div>
        </div>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">

    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title" required value="<%= data.title %>">

    <label for="body"><b>Content</b></label>
    <textarea name="body" cols="50" rows="10" required placeholder="What's on your mind?"> <%= data.body %></textarea>

    <input type="submit" value="Update" class="btn">

    <span>
        <% if (typeof error !=='undefined' && error) { %>
            <span class="error">
                <%= error.message %>
            </span>
        <% } %>
    </span>

</form>