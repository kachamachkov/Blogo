<div class="author">
    <h1 class="author__heading">Hi, I am Boyan</h1>
    <p class="author__body">Web Developer enthusiast! :)</p>
</div>

<img src="/img/blogo_main_picture.jpg" alt="person on iceberg background in Iceland" class="hero-image" width="981"
    height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="article-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>
    </ul>

    <% if (nextPage !==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>

        <% } %>
</section>