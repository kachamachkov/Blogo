<% if (current == 1) { %>
    <div class="author">
        <h1 class="author__heading">Welcome to Blogo!</h1>
        <p class="author__body">Boyan's personal blog, unique, I know! :)</p>
    </div>
    <img src="/img/blogo_main_picture.jpg" alt="person on iceberg background in Iceland" class="hero-image">

    <% } %>

        <section class="articles">
            <% if (current == 1) { %>
                <h2 class="articles__heading">Latest Posts</h2>

                <% } else { %>
                 
                    <h2 class="articles__heading">Older Posts</h2>
                
            <% } %>

            <ul class="article-ul">
                <% data.forEach(post=> { %>
                    <li>
                        <a href="/posts/<%= post._id %>">
                            <span>
                                <%= post.title %>
                            </span>
                            <span class="article-list__date">
                                <%= post.createdAt.toDateString() %>
                            </span>
                        </a>
                    </li>
                    <% }) %>
            </ul>

                <div class="pagination-container">
                    <% if (nextPage !== null) { %>
                        <a href="/?page=<%= nextPage %>" class="pagination"> &lt; View Older Posts </a>
                    <% } %>
                    
                    <% if (prevPage !== null) { %>
                        <a href="/?page=<%= prevPage %>" class="pagination"> View Newer Posts &gt;</a>
                    <% } %>
                
                    
                </div>